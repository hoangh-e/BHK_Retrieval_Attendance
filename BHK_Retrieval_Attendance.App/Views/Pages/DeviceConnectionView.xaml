<UserControl x:Class="BHK.Retrieval.Attendance.WPF.Views.Pages.DeviceConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Kết nối thiết bị chấm công"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="Cấu hình và quản lý kết nối với thiết bị ZD2911"
                       FontSize="14"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Connection Settings -->
        <materialDesign:Card Grid.Row="1" 
                            Padding="20" 
                            Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Connection Type -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Loại kết nối:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                
                <ComboBox Grid.Row="0" Grid.Column="1"
                          SelectedIndex="{Binding ConnectionType}"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="TCP/IP"/>
                    <ComboBoxItem Content="Serial (RS485)"/>
                    <ComboBoxItem Content="USB"/>
                </ComboBox>

                <!-- IP Address (for TCP/IP) -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Địa chỉ IP:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Visibility="{Binding IsTcpConnection, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="192.168.1.100"
                         Margin="0,0,0,15"
                         Visibility="{Binding IsTcpConnection, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Port -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Cổng:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Visibility="{Binding IsTcpConnection, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="4370"
                         Margin="0,0,0,15"
                         Visibility="{Binding IsTcpConnection, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- COM Port (for Serial) -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Cổng COM:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Visibility="{Binding IsSerialConnection, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <ComboBox Grid.Row="3" Grid.Column="1"
                          ItemsSource="{Binding AvailableComPorts}"
                          SelectedItem="{Binding SelectedComPort}"
                          Margin="0,0,0,15"
                          Visibility="{Binding IsSerialConnection, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Baud Rate (for Serial) -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Tốc độ baud:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Visibility="{Binding IsSerialConnection, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <ComboBox Grid.Row="4" Grid.Column="1"
                          SelectedItem="{Binding BaudRate}"
                          Margin="0,0,0,15"
                          Visibility="{Binding IsSerialConnection, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ComboBoxItem Content="9600"/>
                    <ComboBoxItem Content="19200"/>
                    <ComboBoxItem Content="38400"/>
                    <ComboBoxItem Content="57600"/>
                    <ComboBoxItem Content="115200"/>
                </ComboBox>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="5" Grid.Column="1" 
                           Orientation="Horizontal" 
                           Margin="0,20,0,0">
                    <Button Content="Kết nối"
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding CanConnect}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="Ngắt kết nối"
                            Command="{Binding DisconnectCommand}"
                            IsEnabled="{Binding IsConnected}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="Test kết nối"
                            Command="{Binding TestConnectionCommand}"
                            IsEnabled="{Binding CanTestConnection}"
                            Style="{StaticResource MaterialDesignFlatButton}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Connection Status & Log -->
        <materialDesign:Card Grid.Row="2" 
                            Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Status Header -->
                <StackPanel Grid.Row="0" 
                           Orientation="Horizontal" 
                           Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="Information" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                    <TextBlock Text="Trạng thái kết nối và nhật ký"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <Ellipse Width="12" Height="12" 
                             Fill="{Binding ConnectionStatusColor}"
                             Margin="20,0,5,0"/>
                    <TextBlock Text="{Binding ConnectionStatusText}"
                               VerticalAlignment="Center"
                               FontWeight="Medium"/>
                </StackPanel>

                <!-- Connection Log -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ConnectionLog}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                              Text="{Binding Timestamp, StringFormat='HH:mm:ss'}"
                                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                                              FontFamily="Consolas"/>
                                    
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding Message}"
                                              TextWrapping="Wrap"
                                              Foreground="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>

        <!-- Device Info -->
        <materialDesign:Card Grid.Row="3" 
                            Padding="20" 
                            Margin="0,20,0,0"
                            Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Thông tin thiết bị"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding DeviceInfo.Name, StringFormat='Tên: {0}'}"/>
                    <TextBlock Text="{Binding DeviceInfo.SerialNumber, StringFormat='S/N: {0}'}"/>
                    <TextBlock Text="{Binding DeviceInfo.Model, StringFormat='Model: {0}'}"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Thống kê"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding DeviceInfo.UserCount, StringFormat='Số người dùng: {0}'}"/>
                    <TextBlock Text="{Binding DeviceInfo.RecordCount, StringFormat='Số bản ghi: {0}'}"/>
                    <TextBlock Text="{Binding DeviceInfo.FreeSpace, StringFormat='Dung lượng còn: {0}%'}"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Trạng thái"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding DeviceInfo.DateTime, StringFormat='Thời gian: {0:dd/MM/yyyy HH:mm:ss}'}"/>
                    <TextBlock Text="{Binding DeviceInfo.FirmwareVersion, StringFormat='Firmware: {0}'}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>