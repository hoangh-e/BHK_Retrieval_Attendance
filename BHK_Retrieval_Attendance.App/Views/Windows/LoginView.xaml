<UserControl x:Class="BHK.Retrieval.Attendance.WPF.Views.Windows.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400">
    
    <UserControl.Resources>
        <Style x:Key="LoginCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
        </Style>

        <Style x:Key="LoginButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline4TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,32"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{DynamicResource Primary50}" Offset="0"/>
                <GradientStop Color="{DynamicResource Primary100}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Main Content -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="400">
            <materialDesign:Card Style="{StaticResource LoginCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo and Title -->
                    <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,24">
                        <materialDesign:PackIcon Kind="FingerprintScan" 
                                               Width="64" Height="64" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               Margin="0,0,0,16"/>
                        <TextBlock Text="HỆ THỐNG CHẤM CÔNG BHK" 
                                 Style="{StaticResource TitleTextStyle}"/>
                    </StackPanel>

                    <!-- Username Input -->
                    <TextBox Grid.Row="1" 
                           x:Name="UsernameTextBox"
                           materialDesign:HintAssist.Hint="Tên đăng nhập"
                           materialDesign:HintAssist.IsFloating="True"
                           materialDesign:TextFieldAssist.HasClearButton="True"
                           materialDesign:TextFieldAssist.PrefixText=" "
                           materialDesign:TextFieldAssist.SuffixText=" "
                           Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                           Margin="0,0,0,16"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                        </TextBox.InputBindings>
                        <materialDesign:TextFieldAssist.LeadingIcon>
                            <materialDesign:PackIcon Kind="Account"/>
                        </materialDesign:TextFieldAssist.LeadingIcon>
                    </TextBox>

                    <!-- Password Input -->
                    <PasswordBox Grid.Row="2" 
                               x:Name="PasswordBox"
                               materialDesign:HintAssist.Hint="Mật khẩu"
                               materialDesign:HintAssist.IsFloating="True"
                               materialDesign:PasswordBoxAssist.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                               Margin="0,0,0,16"
                               Style="{StaticResource MaterialDesignOutlinedPasswordBox}">
                        <PasswordBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                        </PasswordBox.InputBindings>
                        <materialDesign:TextFieldAssist.LeadingIcon>
                            <materialDesign:PackIcon Kind="Lock"/>
                        </materialDesign:TextFieldAssist.LeadingIcon>
                    </PasswordBox>

                    <!-- Remember Me Checkbox -->
                    <CheckBox Grid.Row="3" 
                            Content="Ghi nhớ đăng nhập" 
                            IsChecked="{Binding RememberMe}"
                            Margin="0,0,0,24"
                            Style="{StaticResource MaterialDesignCheckBox}"/>

                    <!-- Login Button -->
                    <Button Grid.Row="4" 
                          Content="ĐĂNG NHẬP"
                          Command="{Binding LoginCommand}"
                          IsDefault="True"
                          Style="{StaticResource LoginButtonStyle}">
                        <Button.IsEnabled>
                            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                <Binding Path="CanLogin"/>
                                <Binding Path="IsLoading" Converter="{StaticResource InverseBooleanConverter}"/>
                            </MultiBinding>
                        </Button.IsEnabled>
                    </Button>

                    <!-- Progress Indicator -->
                    <ProgressBar Grid.Row="5" 
                               IsIndeterminate="True" 
                               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Margin="0,8,0,0"/>

                    <!-- Error Message -->
                    <TextBlock Grid.Row="6" 
                             Text="{Binding ErrorMessage}"
                             Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Foreground="{DynamicResource ValidationErrorBrush}"
                             TextWrapping="Wrap"
                             HorizontalAlignment="Center"
                             Margin="0,16,0,0"
                             FontSize="12"/>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Connection Status -->
        <Border HorizontalAlignment="Right" 
              VerticalAlignment="Bottom" 
              Background="{DynamicResource MaterialDesignPaper}"
              CornerRadius="16,0,0,0"
              Padding="12,8">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="WifiStrength4" 
                                       Foreground="{Binding DeviceConnectionStatus, Converter={StaticResource ConnectionStatusToBrushConverter}}"
                                       Width="16" Height="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                <TextBlock Text="{Binding DeviceConnectionText}" 
                         FontSize="11"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>