{
  "ApplicationSettings": {
    "ApplicationName": "BHK Retrieval Attendance System",
    "Version": "1.0.0",
    "Culture": "vi-VN",
    "Theme": "Light"
  },

  "DatabaseSettings": {
    "Provider": "SqlServer",
    "ConnectionString": "Server=localhost;Database=BHK_Attendance;Trusted_Connection=True;TrustServerCertificate=True;",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true
  },

  "DeviceSettings": {
    "DefaultCommunicationType": "TCP/IP",
    "ConnectionTimeout": 30,
    "RetryAttempts": 3,
    "RetryDelay": 5,
    "DevicePassword": "",
    "MonitorMode": "UDP",
    "MonitorPort": 4370,
    "SyncInterval": 300
  },

  "SharePointSettings": {
    "SiteUrl": "",
    "ClientId": "",
    "ClientSecret": "",
    "Enabled": false,
    "ListName": "AttendanceRecords",
    "SyncEnabled": false
  },

  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "",
    "Password": "",
    "FromEmail": "",
    "FromName": "BHK Attendance System"
  },

  "ReportSettings": {
    "DefaultFormat": "Excel",
    "OutputDirectory": "Reports",
    "IncludeCharts": true,
    "CompanyLogo": "Resources/Images/logo.png",
    "CompanyName": "BHK Company"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "BHK.Retrieval.Attendance": "Debug"
    },
    "File": {
      "Path": "Logs/app-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 10485760,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
    }
  },

  "UISettings": {
    "WindowWidth": 1280,
    "WindowHeight": 720,
    "WindowState": "Normal",
    "StartPage": "Dashboard",
    "PageSize": 50,
    "DateFormat": "dd/MM/yyyy",
    "TimeFormat": "HH:mm:ss"
  }
}
