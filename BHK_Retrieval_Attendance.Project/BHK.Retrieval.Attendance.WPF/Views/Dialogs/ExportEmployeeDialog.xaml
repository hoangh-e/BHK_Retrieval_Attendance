<Window x:Class="BHK.Retrieval.Attendance.WPF.Views.Dialogs.ExportEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BHK.Retrieval.Attendance.WPF.Converters"
        Title="Xuất danh sách nhân viên vào Excel" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="XUẤT DANH SÁCH NHÂN VIÊN VÀO EXCEL" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,20">
                
                <!-- Đường dẫn file -->
                <TextBlock Text="Đường dẫn file Excel" 
                           FontWeight="Bold"
                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                <Grid Margin="0,5,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,10,0"
                             materialDesign:HintAssist.Hint="Chọn file Excel để xuất dữ liệu"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    <Button Grid.Column="1" 
                            Content="Chọn file" 
                            Command="{Binding BrowseFileCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </Grid>

                <!-- Tên file (readonly) -->
                <TextBlock Text="Tên file" 
                           FontWeight="Bold"
                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                <TextBox Text="{Binding FileName}" 
                         IsReadOnly="True" 
                         Margin="0,5,0,15"
                         materialDesign:HintAssist.Hint="Tên file được chọn"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <!-- Chọn Excel Table -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Chọn Excel Table" 
                               FontWeight="Bold"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                    <TextBlock Text="(Excel Table khác với Worksheet - Table có filter và structured references)" 
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               FontStyle="Italic"
                               FontSize="11"
                               Margin="0,2,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableTables}" 
                              SelectedItem="{Binding SelectedTable}"
                              materialDesign:HintAssist.Hint="Chọn Excel table để xuất dữ liệu"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                </StackPanel>

                <!-- Thông tin Table -->
                <StackPanel Margin="0,0,0,15" 
                            Visibility="{Binding IsTableSelected, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{Binding RecordCount, StringFormat='📊 Số records trong table: {0}'}"
                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                               FontWeight="Bold" 
                               Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                    <TextBlock Text="{Binding SelectedTable, StringFormat='📋 Tên Excel table: {0}'}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}" 
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                </StackPanel>

                <!-- Loading -->
                <ProgressBar IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                             Height="4" 
                             Margin="0,10"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                           TextWrapping="Wrap"
                           Margin="0,10"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"/>

                <!-- Table Validation Message & Actions -->
                <materialDesign:Card Padding="15" 
                                     Margin="0,10,0,0"
                                     Background="{DynamicResource ValidationErrorBrush}"
                                     Visibility="{Binding TableValidationMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="{Binding TableValidationMessage}" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="🔧 REFACTOR CỘT" 
                                    Command="{Binding ShowRefactorDialogCommand}"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                            <TextBlock Text="Hoặc chọn table khác phù hợp" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Create Default Table (when no tables exist) -->
                <materialDesign:Card Padding="15" 
                                     Margin="0,10,0,0"
                                     Background="{DynamicResource SecondaryHueMidBrush}"
                                     Visibility="{Binding ShowCreateDefaultTable, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="🏗️ Tạo Employee Table mặc định" 
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"
                                   Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                        <TextBlock Text="Tạo table với cấu trúc Employee chuẩn (10 cột) trên sheet đầu tiên" 
                                   Foreground="White"
                                   Margin="0,0,0,10"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                        <Button Content="✨ TẠO EMPLOYEE TABLE" 
                                Command="{Binding CreateDefaultTableCommand}"
                                Style="{StaticResource MaterialDesignRaisedLightButton}"/>
                    </StackPanel>
                </materialDesign:Card>


            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            
            <Button Content="🔧 TẠO EXCEL TABLE MỚI" 
                    Command="{Binding CreateTableCommand}"
                    Visibility="{Binding CanCreateTable, Converter={StaticResource BoolToVisibility}}"
                    Margin="0,0,10,0"
                    ToolTip="Tạo Excel Table mới trong file (không phải worksheet)"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            
            <Button Content="❌ HỦY" 
                    Command="{Binding CancelCommand}"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            
            <Button Content="📤 XUẤT VÀO TABLE" 
                    Command="{Binding ExportCommand}"
                    IsEnabled="{Binding IsTableSelected}"
                    ToolTip="Xuất dữ liệu vào Excel Table đã chọn"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
