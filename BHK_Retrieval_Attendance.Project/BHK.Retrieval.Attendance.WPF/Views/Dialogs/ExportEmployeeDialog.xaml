<Window x:Class="BHK.Retrieval.Attendance.WPF.Views.Dialogs.ExportEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Xuất Danh Sách Nhân Viên" 
        Height="550" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="XUẤT DANH SÁCH NHÂN VIÊN" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Đường dẫn file Excel -->
                <TextBlock Text="Đường dẫn file Excel"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           Margin="0,0,0,5"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                             Text="{Binding EmployeeFilePath, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Chọn file Excel (.xlsx)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,10,0"/>

                    <Button Grid.Column="1"
                            Content="CHỌN FILE"
                            Command="{Binding BrowseFileCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </Grid>

                <!-- Tên file (read-only) -->
                <TextBox Text="{Binding FileName, Mode=OneWay}"
                         materialDesign:HintAssist.Hint="Tên file"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         IsReadOnly="True"
                         Margin="0,0,0,20"/>

                <!-- Chọn Table -->
                <TextBlock Text="Chọn Table"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                           Margin="0,0,0,5"/>
                
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding AvailableTables}"
                              SelectedItem="{Binding SelectedTable, UpdateSourceTrigger=PropertyChanged}"
                              materialDesign:HintAssist.Hint="Chọn table hoặc tạo mới"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,10,0"/>

                    <Button Grid.Column="1"
                            Content="TẠO TABLE"
                            Command="{Binding CreateTableCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Visibility="{Binding CanCreateTable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Số lượng records -->
                <TextBlock Text="{Binding RecordCount, StringFormat='Số lượng records hiện có: {0}'}"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           Margin="0,0,0,10"/>

                <!-- Loading indicator -->
                <ProgressBar IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Margin="0,10,0,10"/>

                <!-- Status message -->
                <TextBlock Text="{Binding StatusMessage}"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource SecondaryHueMidBrush}"
                           Margin="0,0,0,10"
                           Visibility="{Binding StatusMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer: Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="HỦY"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding CancelCommand}"
                    Margin="0,0,10,0"/>

            <Button Content="XUẤT"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding ExportCommand}"
                    IsEnabled="{Binding IsTableSelected}"/>
        </StackPanel>
    </Grid>
</Window>
