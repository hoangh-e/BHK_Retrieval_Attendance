<Window x:Class="BHK.Retrieval.Attendance.WPF.Views.Dialogs.ExportAttendanceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Xuất điểm danh vào Excel" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <!-- Simple converter for status message visibility -->
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="XUẤT ĐIỂM DANH VÀO EXCEL" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,20">
                
                <!-- Đường dẫn file -->
                <TextBlock Text="Đường dẫn file Excel sẽ tạo" 
                           FontWeight="Bold"
                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                <Grid Margin="0,5,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,10,0"
                             IsReadOnly="True"
                             materialDesign:HintAssist.Hint="File Excel sẽ được tạo tại đây"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    <Button Grid.Column="1" 
                            Content="Chọn thư mục" 
                            Command="{Binding BrowseFileCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </Grid>

                <!-- Tên file (readonly) -->
                <TextBlock Text="Tên file" 
                           FontWeight="Bold"
                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                <TextBox Text="{Binding FileName}" 
                         IsReadOnly="True" 
                         Margin="0,5,0,15"
                         materialDesign:HintAssist.Hint="Tên file được chọn"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <!-- Chọn Table -->
                <TextBlock Text="Chọn Table" 
                           FontWeight="Bold"
                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                <ComboBox ItemsSource="{Binding AvailableTables}" 
                          SelectedItem="{Binding SelectedTable}"
                          Margin="0,5,0,15"
                          materialDesign:HintAssist.Hint="Chọn table để xuất dữ liệu"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                <!-- Số lượng records -->
                <TextBlock Text="{Binding RecordCount, StringFormat='Số lượng records hiện có: {0}'}"
                           Foreground="{DynamicResource PrimaryHueMidBrush}" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"
                           Style="{StaticResource MaterialDesignBody1TextBlock}"/>

                <!-- Loading -->
                <ProgressBar IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                             Height="4" 
                             Margin="0,10"
                             Style="{StaticResource MaterialDesignLinearProgressBar}"/>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                           TextWrapping="Wrap"
                           Margin="0,10"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            
            <Button Content="TẠO TABLE" 
                    Command="{Binding CreateTableCommand}"
                    Visibility="{Binding CanCreateTable, Converter={StaticResource BoolToVisibility}}"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            
            <Button Content="HỦY" 
                    Command="{Binding CancelCommand}"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            
            <Button Content="XUẤT" 
                    Command="{Binding ExportCommand}"
                    IsEnabled="{Binding IsTableSelected}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>