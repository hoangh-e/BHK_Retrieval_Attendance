<Window x:Class="BHK.Retrieval.Attendance.WPF.Views.Dialogs.ExportConfigurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Thiết lập xuất file" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="CẤU HÌNH XUẤT FILE" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <StackPanel Grid.Row="1">
            <ComboBox materialDesign:HintAssist.Hint="Dạng file"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                    SelectedItem="{Binding SelectedFileType}"
                    Margin="0,0,0,20">
                <ComboBox.ItemsSource>
                    <x:Array Type="{x:Type system:String}">
                        <system:String>JSON (.json)</system:String>
                        <system:String>Excel (.xlsx)</system:String>
                        <system:String>Text (.txt)</system:String>
                        <system:String>CSV (.csv)</system:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>

            <TextBox materialDesign:HintAssist.Hint="Tên file"
                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                   Text="{Binding FileName}"
                   Margin="0,0,0,20"/>

            <TextBlock Text="{Binding RecordCount, StringFormat='Số lượng bản ghi: {0}'}"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Footer: Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="HỦY"
                  Style="{StaticResource MaterialDesignOutlinedButton}"
                  Command="{Binding CancelCommand}"
                  Margin="0,0,10,0"/>

            <Button Content="XUẤT FILE"
                  Style="{StaticResource MaterialDesignRaisedButton}"
                  Command="{Binding ExportCommand}"/>
        </StackPanel>
    </Grid>
</Window>
