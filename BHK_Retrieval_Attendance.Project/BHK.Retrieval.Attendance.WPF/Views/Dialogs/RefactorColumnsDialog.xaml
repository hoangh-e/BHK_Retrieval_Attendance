<Window x:Class="BHK.Retrieval.Attendance.WPF.Views.Dialogs.RefactorColumnsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Refactor Table Columns" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" 
                            Padding="20"
                            Background="{DynamicResource MaterialDesignPaper}"
                            Margin="10,10,10,5">
            <StackPanel>
                <TextBlock Text="🔧 Refactor Table Columns" 
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="{DynamicResource PrimaryHueMidBrush}"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Cấu trúc cột của table không đúng với định dạng Employee mong đợi. Vui lòng xem xét và sửa lại cấu trúc cột." 
                          TextWrapping="Wrap"
                          Foreground="{DynamicResource MaterialDesignBody}"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      Margin="10,5,10,5"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Current Columns -->
                <materialDesign:Card Padding="15" 
                                    Margin="0,0,0,10"
                                    Background="#FFE57373">
                    <StackPanel>
                        <TextBlock Text="❌ Cột hiện tại (Không hợp lệ)" 
                                  FontWeight="Bold"
                                  Foreground="#FF1B1B1B"
                                  FontSize="14"
                                  Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding CurrentColumns}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Chip Content="{Binding}"
                                                        Margin="5,2"
                                                        Background="White"
                                                        Foreground="#FFD32F2F"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Expected Columns -->
                <materialDesign:Card Padding="15" 
                                    Margin="0,0,0,10"
                                    Background="#FF81C784">
                    <StackPanel>
                        <TextBlock Text="✅ Cột mong đợi (Định dạng Employee)" 
                                  FontWeight="Bold"
                                  Foreground="#FF1B1B1B"
                                  FontSize="14"
                                  Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding ExpectedColumns}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Chip Content="{Binding}"
                                                        Margin="5,2"
                                                        Background="White"
                                                        Foreground="#FF388E3C"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Warning -->
                <materialDesign:Card Padding="15" 
                                    Background="#FFFFF3E0"
                                    BorderBrush="#FFFFA726"
                                    BorderThickness="2">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Warning" 
                                               Foreground="#FFF57C00"
                                               Width="24"
                                               Height="24"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Refactor sẽ tái cấu trúc table để khớp với định dạng Employee. Dữ liệu hiện có có thể bị mất." 
                                  TextWrapping="Wrap"
                                  VerticalAlignment="Center"
                                  Foreground="#FF424242"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="10,5,10,10">
            
            <Button Content="❌ CANCEL" 
                    Command="{Binding CloseCommand}"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            
            <Button Content="🔧 REFACTOR COLUMNS" 
                    Command="{Binding RefactorCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

    </Grid>
</Window>