<UserControl x:Class="BHK.Retrieval.Attendance.WPF.Views.Pages.AttendanceManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:BHK.Retrieval.Attendance.WPF.ViewModels"
             xmlns:converters="clr-namespace:BHK.Retrieval.Attendance.WPF.Converters"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:AttendanceManagementViewModel}"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="QUẢN LÝ CHẤM CÔNG" 
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- Filter Panel - Responsive Design -->
        <materialDesign:Card Grid.Row="1" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Filter Type Selection -->
                <WrapPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton Content="Khoảng có sẵn"
                               IsChecked="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=PredefinedRange}"
                               Margin="0,0,15,5" VerticalAlignment="Center"/>
                    
                    <RadioButton Content="Ngày cụ thể"
                               IsChecked="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SingleDate}"
                               Margin="0,0,15,5" VerticalAlignment="Center"/>
                    
                    <RadioButton Content="Khoảng tùy chỉnh"
                               IsChecked="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=DateRange}"
                               Margin="0,0,0,5" VerticalAlignment="Center"/>
                </WrapPanel>

                <!-- Row 2: Date/Time Filters & Actions -->
                <WrapPanel Grid.Row="1" Orientation="Horizontal">
                    <!-- Predefined Range Combo -->
                    <ComboBox materialDesign:HintAssist.Hint="Chọn khoảng thời gian"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            ItemsSource="{Binding PredefinedDateRanges}"
                            DisplayMemberPath="Display"
                            SelectedItem="{Binding SelectedPredefinedRangeItem}"
                            IsEnabled="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=PredefinedRange}"
                            MinWidth="180" MaxWidth="250" Margin="0,0,10,5"/>

                    <!-- Single Date Picker -->
                    <DatePicker materialDesign:HintAssist.Hint="Chọn ngày"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                              SelectedDate="{Binding SingleDate}"
                              IsEnabled="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SingleDate}"
                              MinWidth="180" MaxWidth="250" Margin="0,0,10,5"/>

                    <!-- Date Range: From -->
                    <DatePicker materialDesign:HintAssist.Hint="Từ ngày"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                              SelectedDate="{Binding StartDate}"
                              IsEnabled="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=DateRange}"
                              MinWidth="140" MaxWidth="180" Margin="0,0,10,5"/>
                    
                    <!-- Date Range: To -->
                    <DatePicker materialDesign:HintAssist.Hint="Đến ngày"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                              SelectedDate="{Binding EndDate}"
                              IsEnabled="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=DateRange}"
                              MinWidth="140" MaxWidth="180" Margin="0,0,15,5"/>

                    <!-- Time Filter -->
                    <ComboBox materialDesign:HintAssist.Hint="Giờ"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            ItemsSource="{Binding TimeFilters}"
                            DisplayMemberPath="Display"
                            SelectedItem="{Binding SelectedTimeFilterItem}"
                            MinWidth="120" MaxWidth="150" Margin="0,0,15,5"/>

                    <!-- Action Buttons -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                          Command="{Binding LoadDataCommand}"
                          Margin="0,0,8,5"
                          Height="32" Padding="12,0"
                          materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding IsLoading}"
                          materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Filter" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Lọc" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                          Command="{Binding RefreshCommand}"
                          Margin="0,0,8,5"
                          Height="32" Padding="10,0"
                          ToolTip="Làm mới">
                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                          Command="{Binding OpenExportDialogCommand}"
                          Height="32" Padding="10,0"
                          Margin="0,0,0,5"
                          ToolTip="Xuất file">
                        <materialDesign:PackIcon Kind="FileExport" Width="16" Height="16"/>
                    </Button>
                </WrapPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Data Grid with proper scrolling -->
        <materialDesign:Card Grid.Row="2" Padding="0" MaxHeight="600">
            <Grid>
                <!-- Loading Overlay -->
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           IsIndeterminate="True"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Width="50"
                           Height="50"
                           Panel.ZIndex="1"/>

                <!-- Data Grid - với scroll bars tự động -->
                <DataGrid ItemsSource="{Binding AttendanceRecords}"
                        SelectedItem="{Binding SelectedRecord}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        SelectionMode="Single"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto"
                        EnableRowVirtualization="True"
                        EnableColumnVirtualization="True"
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisConverter}}">
                    
                    <DataGrid.Columns>
                        <!-- Thứ tự cột: STT, DIN, Ngày, Giờ, Loại, Thiết bị (DN), Hành động, Ghi chú -->
                        <DataGridTextColumn Header="STT" Binding="{Binding Index}" Width="60" MinWidth="50"/>
                        <DataGridTextColumn Header="DIN" Binding="{Binding DIN}" Width="120" MinWidth="100"/>
                        <DataGridTextColumn Header="Ngày" Binding="{Binding Date}" Width="130" MinWidth="120"/>
                        <DataGridTextColumn Header="Giờ" Binding="{Binding Time}" Width="110" MinWidth="100"/>
                        <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="120" MinWidth="100"/>
                        <DataGridTextColumn Header="Thiết bị" Binding="{Binding DN}" Width="90" MinWidth="70"/>
                        <DataGridTextColumn Header="Hành động" Binding="{Binding Action}" Width="100" MinWidth="90"/>
                        <DataGridTextColumn Header="Ghi chú" Binding="{Binding Remark}" Width="*" MinWidth="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Pagination -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Statistics with Load Time -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <!-- Total Records -->
                <TextBlock Text="{Binding TotalRecordsDisplay}"
                         FontWeight="Bold"
                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                         Margin="0,0,0,4"/>
                
                <!-- Load Time -->
                <TextBlock Text="{Binding LoadTimeDisplay}"
                         FontSize="12"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>

            <!-- Right: Pagination Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- First Page -->
                <Button Style="{StaticResource MaterialDesignIconButton}"
                       Command="{Binding FirstPageCommand}"
                       ToolTip="Trang đầu"
                       Width="32" Height="32"
                       Margin="0,0,4,0">
                    <materialDesign:PackIcon Kind="PageFirst" Width="20" Height="20"/>
                </Button>

                <!-- Previous Page -->
                <Button Style="{StaticResource MaterialDesignIconButton}"
                       Command="{Binding PreviousPageCommand}"
                       ToolTip="Trang trước"
                       Width="32" Height="32"
                       Margin="0,0,4,0">
                    <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                </Button>

                <!-- Page Info -->
                <Border Background="{DynamicResource PrimaryHueLightBrush}"
                       CornerRadius="4"
                       Padding="12,6"
                       Margin="0,0,4,0">
                    <TextBlock Text="{Binding CurrentPageDisplay}"
                             FontWeight="Bold"
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Next Page -->
                <Button Style="{StaticResource MaterialDesignIconButton}"
                       Command="{Binding NextPageCommand}"
                       ToolTip="Trang sau"
                       Width="32" Height="32"
                       Margin="0,0,4,0">
                    <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                </Button>

                <!-- Last Page -->
                <Button Style="{StaticResource MaterialDesignIconButton}"
                       Command="{Binding LastPageCommand}"
                       ToolTip="Trang cuối"
                       Width="32" Height="32">
                    <materialDesign:PackIcon Kind="PageLast" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
