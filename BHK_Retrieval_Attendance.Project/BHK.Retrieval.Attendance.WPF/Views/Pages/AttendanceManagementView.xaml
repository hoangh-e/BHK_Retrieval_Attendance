<UserControl x:Class="BHK.Retrieval.Attendance.WPF.Views.Pages.AttendanceManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:BHK.Retrieval.Attendance.WPF.ViewModels"
             xmlns:converters="clr-namespace:BHK.Retrieval.Attendance.WPF.Converters"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:AttendanceManagementViewModel}"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="QUẢN LÝ CHẤM CÔNG" 
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- Filter Panel -->
        <materialDesign:Card Grid.Row="1" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Date Filter Options -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Lọc theo ngày" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  Margin="0,0,0,15"/>
                        
                        <!-- Option 1: Predefined Range -->
                        <RadioButton Content="Chọn khoảng thời gian có sẵn"
                                   IsChecked="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=PredefinedRange}"
                                   Margin="0,0,0,10"/>
                        
                        <ComboBox materialDesign:HintAssist.Hint="Chọn khoảng thời gian"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                ItemsSource="{Binding PredefinedDateRanges}"
                                DisplayMemberPath="Display"
                                SelectedItem="{Binding SelectedPredefinedRangeItem}"
                                IsEnabled="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=PredefinedRange}"
                                Margin="20,0,0,15"/>

                        <!-- Option 2: Single Date -->
                        <RadioButton Content="Chọn ngày cụ thể"
                                   IsChecked="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SingleDate}"
                                   Margin="0,0,0,10"/>
                        
                        <DatePicker materialDesign:HintAssist.Hint="Chọn ngày"
                                  Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                  SelectedDate="{Binding SingleDate}"
                                  IsEnabled="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=SingleDate}"
                                  Margin="20,0,0,15"/>

                        <!-- Option 3: Date Range -->
                        <RadioButton Content="Chọn khoảng ngày tùy chỉnh"
                                   IsChecked="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=DateRange}"
                                   Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  IsEnabled="{Binding SelectedFilterType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=DateRange}"
                                  Margin="20,0,0,0">
                            <DatePicker materialDesign:HintAssist.Hint="Từ ngày"
                                      Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                      SelectedDate="{Binding StartDate}"
                                      Width="200" Margin="0,0,15,0"/>
                            
                            <DatePicker materialDesign:HintAssist.Hint="Đến ngày"
                                      Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                      SelectedDate="{Binding EndDate}"
                                      Width="200"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right: Time Filter & Actions -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Lọc theo giờ"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,15"/>
                        
                        <ComboBox materialDesign:HintAssist.Hint="Chọn khung giờ"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                ItemsSource="{Binding TimeFilters}"
                                DisplayMemberPath="Display"
                                SelectedItem="{Binding SelectedTimeFilterItem}"
                                Margin="0,0,0,20"/>
                    </StackPanel>
                </Grid>

                <!-- Action Buttons - Moved below for better visibility -->
                <Separator Margin="0,10,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Nút Lọc - Load dữ liệu theo điều kiện -->
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                          Command="{Binding LoadDataCommand}"
                          Margin="0,0,10,0"
                          Height="36"
                          materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding IsLoading}"
                          materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Filter" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Lọc" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                          Command="{Binding RefreshCommand}"
                          Margin="0,0,10,0"
                          Height="36">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Làm mới" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                          Command="{Binding OpenExportDialogCommand}"
                          Height="36">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExport" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="Xuất file" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- Data Grid with ScrollViewer for responsiveness -->
        <materialDesign:Card Grid.Row="2" Padding="0">
            <Grid MinHeight="300">
                <!-- Loading Overlay -->
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           IsIndeterminate="True"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Width="50"
                           Height="50"/>

                <!-- Data Grid with ScrollViewer -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Auto"
                            Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisConverter}}">
                    <DataGrid ItemsSource="{Binding AttendanceRecords}"
                            SelectedItem="{Binding SelectedRecord}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            MinWidth="600"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Disabled">
                        
                        <DataGrid.Columns>
                            <!-- Hiển thị 8 cột: DN, DIN, Ngày, Giờ, Loại, Phương thức, Hành động, Ghi chú -->
                            <DataGridTextColumn Header="DN" Binding="{Binding DN}" Width="80" MinWidth="60"/>
                            <DataGridTextColumn Header="DIN" Binding="{Binding DIN}" Width="120" MinWidth="100"/>
                            <DataGridTextColumn Header="Ngày" Binding="{Binding Date}" Width="130" MinWidth="120"/>
                            <DataGridTextColumn Header="Giờ" Binding="{Binding Time}" Width="110" MinWidth="100"/>
                            <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="120" MinWidth="100"/>
                            <DataGridTextColumn Header="Phương thức" Binding="{Binding Verify}" Width="110" MinWidth="90"/>
                            <DataGridTextColumn Header="Hành động" Binding="{Binding Action}" Width="100" MinWidth="90"/>
                            <DataGridTextColumn Header="Ghi chú" Binding="{Binding Remark}" Width="*" MinWidth="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>

        <!-- Footer: Statistics with Load Time -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0" FlowDirection="LeftToRight">
            <TextBlock Text="Tổng số bản ghi: " 
                     Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBlock Text="{Binding TotalRecords}" 
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     FontWeight="Bold"
                     Margin="0,0,20,0"/>
            <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}">
                <Run Text="(Thời gian: "/>
                <Run Text="{Binding LoadTimeMs, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="ms)"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
