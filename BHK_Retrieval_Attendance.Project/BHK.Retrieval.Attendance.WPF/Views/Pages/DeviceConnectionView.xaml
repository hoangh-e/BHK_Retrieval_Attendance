<UserControl x:Class="BHK.Retrieval.Attendance.WPF.Views.Pages.DeviceConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:BHK.Retrieval.Attendance.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:DeviceConnectionViewModel}"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="CardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Padding" Value="24"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,16,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="TCP/IP Device Connection" 
                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Configure and manage network connection to attendance device" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding RefreshCommand}"
                                ToolTip="Refresh Status">
                            <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Connection Settings Card -->
            <materialDesign:Card Grid.Row="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Connection Settings" Style="{StaticResource SectionHeaderStyle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- IP Address -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="IP Address:" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding ConnectionModel.IpAddress, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 materialDesign:HintAssist.Hint="e.g., 192.168.1.225"
                                 IsEnabled="{Binding ConnectionModel.IsConnected, Converter={StaticResource InverseBooleanConverter}}"/>

                        <!-- Port -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="UDP Port:" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding ConnectionModel.Port, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 materialDesign:HintAssist.Hint="e.g., 4370"
                                 IsEnabled="{Binding ConnectionModel.IsConnected, Converter={StaticResource InverseBooleanConverter}}"/>

                        <!-- Device Number -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Device Number (DN):" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding ConnectionModel.DeviceNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputStyle}"
                                 materialDesign:HintAssist.Hint="Device identification number"
                                 IsEnabled="{Binding ConnectionModel.IsConnected, Converter={StaticResource InverseBooleanConverter}}"/>

                        <!-- Password -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Password:" 
                                   Style="{StaticResource LabelStyle}"/>
                        <PasswordBox Grid.Row="3" Grid.Column="1"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Margin="0,8"
                                     materialDesign:HintAssist.Hint="Device password"
                                     IsEnabled="{Binding ConnectionModel.IsConnected, Converter={StaticResource InverseBooleanConverter}}"/>

                        <!-- Device Model -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Device Model:" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding ConnectionModel.DeviceModel}"
                                 Style="{StaticResource InputStyle}"
                                 IsReadOnly="True"
                                 materialDesign:HintAssist.Hint="Device model type"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- Connection Control Card -->
            <materialDesign:Card Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Connection Control" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Status Display -->
                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,16"
                            Background="{DynamicResource MaterialDesignToolBarBackground}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                                     Kind="Circle"
                                                     Width="16" Height="16"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,12,0">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ConnectionModel.IsConnected}" Value="True">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding ConnectionModel.ConnectionStatus}"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       FontWeight="Medium"/>

                            <ProgressBar Grid.Column="2"
                                         Width="100"
                                         Height="4"
                                         IsIndeterminate="True"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <UniformGrid Rows="1" Columns="3" HorizontalAlignment="Stretch">
                        <!-- Connect Button -->
                        <Button Content="CONNECT"
                                Command="{Binding ConnectCommand}"
                                Margin="0,0,8,0"
                                Height="48"
                                Background="{DynamicResource PrimaryHueMidBrush}"
                                materialDesign:ButtonAssist.CornerRadius="4">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Disconnect Button -->
                        <Button Content="DISCONNECT"
                                Command="{Binding DisconnectCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Margin="4,0"
                                Height="48"
                                Background="OrangeRed"
                                materialDesign:ButtonAssist.CornerRadius="4"/>

                        <!-- Test Connection Button -->
                        <Button Content="TEST"
                                Command="{Binding TestConnectionCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="8,0,0,0"
                                Height="48"
                                materialDesign:ButtonAssist.CornerRadius="4"/>
                    </UniformGrid>
                </StackPanel>
            </materialDesign:Card>

            <!-- Information Card -->
            <materialDesign:Card Grid.Row="3" 
                                 Style="{StaticResource CardStyle}"
                                 VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="Connection Information" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <StackPanel>
                            <TextBlock Text="📌 Tips:" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap" 
                                       Margin="16,0,0,4"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}">
                                • Ensure the device is powered on and connected to the network
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Margin="16,0,0,4"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}">
                                • Verify the IP address matches the device's network configuration
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Margin="16,0,0,4"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}">
                                • Default UDP port for ZDC2911 is 4370
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" 
                                       Margin="16,0,0,0"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}">
                                • Use Test button to verify network connectivity before connecting
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</UserControl>
