<UserControl x:Class="BHK.Retrieval.Attendance.WPF.Views.Pages.ConnectionSuccessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="SuccessIconStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,24,0,8"/>
        </Style>

        <Style x:Key="SubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,32"/>
        </Style>

        <Style x:Key="InfoCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>

        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Success Animation -->
        <Storyboard x:Key="SuccessAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SuccessIcon"
                           Storyboard.TargetProperty="Opacity"
                           From="0.7" To="1.0" Duration="0:0:1.5"
                           AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource SuccessAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="0" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <StackPanel MaxWidth="600" 
                       Margin="32"
                       VerticalAlignment="Center">

                <!-- Success Icon -->
                <materialDesign:PackIcon x:Name="SuccessIcon"
                                        Kind="CheckCircle" 
                                        Style="{StaticResource SuccessIconStyle}"/>

                <!-- Title -->
                <TextBlock Text="Connection Successful!" 
                          Style="{StaticResource TitleStyle}"/>

                <!-- Subtitle -->
                <TextBlock Style="{StaticResource SubtitleStyle}">
                    <Run Text="Successfully connected to the attendance device."/>
                    <LineBreak/>
                    <Run Text="You can now manage attendance records and employee data."/>
                </TextBlock>

                <!-- Device Information Card -->
                <materialDesign:Card Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Device Information" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,16"/>

                        <!-- IP Address -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="IpNetwork" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="IP Address:" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock Text="{Binding IpAddress}" Style="{StaticResource InfoValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Port -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Ethernet" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Port:" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock Text="{Binding Port}" Style="{StaticResource InfoValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Device Number -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Numeric" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Device Number:" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock Text="{Binding DeviceNumber}" Style="{StaticResource InfoValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Device Model -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="DevicesOther" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Model:" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock Text="{Binding DeviceModel}" Style="{StaticResource InfoValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Connection Time -->
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Clock" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Connected At:" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock Text="{Binding ConnectionTime, StringFormat='HH:mm:ss'}" 
                                          Style="{StaticResource InfoValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Test Mode Warning (if applicable) -->
                <materialDesign:Card Style="{StaticResource InfoCardStyle}"
                                    Background="{DynamicResource SecondaryHueLightBrush}"
                                    Visibility="{Binding IsTestMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Alert" 
                                                Width="24" 
                                                Height="24"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource SecondaryHueDarkBrush}"
                                                Margin="0,0,12,0"/>
                        <TextBlock TextWrapping="Wrap" 
                                  VerticalAlignment="Center">
                            <Run Text="⚠️ TEST MODE ACTIVE" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="This is a simulated connection. No actual device communication is occurring."/>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Quick Actions Card -->
                <materialDesign:Card Style="{StaticResource InfoCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   Margin="0,8">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                   materialDesign:ButtonAssist.CornerRadius="8"
                                   Margin="8,0"
                                   Padding="16,8"
                                   Command="{Binding NavigateToDashboardCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewDashboard" 
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="Go to Dashboard" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                   materialDesign:ButtonAssist.CornerRadius="8"
                                   Margin="8,0"
                                   Padding="16,8"
                                   Command="{Binding DisconnectCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="LinkOff" 
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="Disconnect" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="1" 
               Background="{DynamicResource MaterialDesignDivider}"
               Padding="16,8">
            <TextBlock Text="BHK Retrieval Attendance System v1.0.0" 
                      HorizontalAlignment="Center"
                      FontSize="12"
                      Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </Border>
    </Grid>
</UserControl>