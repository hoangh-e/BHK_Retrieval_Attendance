<UserControl x:Class="BHK.Retrieval.Attendance.WPF.Views.Pages.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:BHK.Retrieval.Attendance.WPF.ViewModels">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            
            <!-- Header -->
            <TextBlock Text="THÔNG TIN PHẦN MỀM"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       Margin="0,0,0,20"/>

            <!-- Logo and Name Section -->
            <materialDesign:Card Margin="0,0,0,20" Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Application" 
                                            Width="64" Height="64"
                                            HorizontalAlignment="Center"
                                            Foreground="{DynamicResource PrimaryHueMidBrush}"
                                            Margin="0,0,0,16"/>
                    
                    <TextBlock Text="{Binding SoftwareName}"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    
                    <TextBlock Text="{Binding Version}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Description Section -->
            <materialDesign:Card Margin="0,0,0,20" Padding="20">
                <StackPanel>
                    <TextBlock Text="Mô tả"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="{Binding Description}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Developer Section -->
            <materialDesign:Card Margin="0,0,0,20" Padding="20">
                <StackPanel>
                    <TextBlock Text="Nhà phát triển"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountGroup"
                                                Width="20" Height="20"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"
                                                Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="{Binding Developer}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- License Section -->
            <materialDesign:Card Margin="0,0,0,20" Padding="20">
                <StackPanel>
                    <TextBlock Text="Giấy phép"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Certificate"
                                                Width="20" Height="20"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"
                                                Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="{Binding License}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Copyright Section -->
            <materialDesign:Card Padding="20">
                <StackPanel>
                    <TextBlock Text="Bản quyền"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Copyright"
                                                Width="20" Height="20"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"
                                                Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="{Binding Copyright}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBody}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>
