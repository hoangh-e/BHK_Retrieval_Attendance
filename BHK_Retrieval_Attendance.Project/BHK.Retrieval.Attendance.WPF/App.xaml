<Application x:Class="BHK.Retrieval.Attendance.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:BHK.Retrieval.Attendance.WPF.Converters"
             xmlns:views="clr-namespace:BHK.Retrieval.Attendance.WPF.Views.Pages"
             xmlns:vm="clr-namespace:BHK.Retrieval.Attendance.WPF.ViewModels.Pages">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                           PrimaryColor="BlueGrey" 
                                           SecondaryColor="Cyan" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- DataTemplate mapping -->
            <DataTemplate DataType="{x:Type vm:HomePageViewModel}">
                <views:HomePageView />
            </DataTemplate>
            
            <!-- Thêm các DataTemplate khác cho các Page khác -->

            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
