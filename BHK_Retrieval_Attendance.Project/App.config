<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="serilog" type="Serilog.ConfigurationSection, Serilog.Configuration" />
  </configSections>

  <appSettings>
    <!-- Application Settings -->
    <add key="ApplicationName" value="BHK Attendance System" />
    <add key="ApplicationVersion" value="1.0.0" />
    <add key="Environment" value="Development" />
    
    <!-- UI Settings -->
    <add key="DefaultLanguage" value="vi-VN" />
    <add key="DefaultTheme" value="Light" />
    
    <!-- Feature Flags -->
    <add key="EnableAutoBackup" value="true" />
    <add key="EnableSharePointSync" value="false" />
    <add key="EnableEmailNotification" value="false" />
  </appSettings>

  <connectionStrings>
    <!-- Database Connection -->
    <add name="DefaultConnection" 
         connectionString="Server=localhost;Database=BHK_Attendance;Integrated Security=true;TrustServerCertificate=true;" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>

  <!-- Serilog Configuration -->
  <serilog>
    <using>Serilog.Sinks.File</using>
    <using>Serilog.Sinks.Console</using>
    
    <minimum-level>Debug</minimum-level>
    
    <write-to name="File">
      <Args>
        <path>Logs/log-.txt</path>
        <rollingInterval>Day</rollingInterval>
        <outputTemplate>[{Timestamp:yyyy-MM-dd HH:mm:ss}] [{Level:u3}] {Message:lj}{NewLine}{Exception}</outputTemplate>
      </Args>
    </write-to>
    
    <write-to name="Console">
      <Args>
        <theme>Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console</theme>
      </Args>
    </write-to>
  </serilog>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
</configuration>